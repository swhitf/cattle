{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015.core",
            "es2015.promise",
            "es2015.reflect",
            "scripthost"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "build/browser",
        "sourceMap": true
    },
    "exclude": [
        "build",
        "export",
        "dist",
        "node_modules",
        "play",
        "test",
        "typings/browser.d.ts",
        "typings/browser"
    ]
}